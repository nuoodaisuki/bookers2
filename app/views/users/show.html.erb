<div class ="container">
  <div class ="row">
    <div class ="col-md-3">
      <%= render 'books/user', user: @user %>
      <%= render 'books/book', book: @book %>
    </div>
    <div class ="col-md-8 offset-md-1">
      <% @books.each do |book| %>
      <div>
        <p><%= image_tag @user.get_profile_image(100,100) %></p>
        <p>Title：<%= link_to book.title, book_path(book.id) %></p>
        <p>Opinion：<%= book.body %></p>
      </div>
      <% end %>
    </div>
  </div>
</div