<div class ="container">
  <div class ="row">
    <div class ="col-md-3">
      <%= render 'books/user', user: @user %>
      <%= render 'books/book', book: @book %>
    </div>
    <div class ="col-md-8 offset-md-1">
      <table>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
        <% @books.each do |book| %>
        <tr>
          <td><%= link_to(user_path(@user)) do %>
                <%= image_tag(@user.get_profile_image(100,100)) %>
              <% end %>
          </td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </table
    </div>
  </div>
</div