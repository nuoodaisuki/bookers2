<div class ="container">
  <div class ="row">
    <div class ="col-md-3">
      <%= render 'user', user: @user %>
      <%= render 'book', book: @book %>
    </div>
    <div class ="col-md-8 offset-md-1">
      <% @books.each do |book| %>
        <%= image_tag book.user.get_profile_image(100,100) %>
        <p>Title：<%= link_to book.title, book_path(book.id) %></p>
        <p>Opinion：<%= book.body %></p>
      <% end %>
    </div>
  </div>
</div>