<h1>User Info</h1>
<div>
  <%= image_tag user.get_profile_image(100,100) %>
  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <div class="center-block">
  　<span class="border border-secondary">
    　<%= link_to edit_user_path(user) do %>
      　<i class="fas fa-user-cog"></i>
    　<% end %>
  　</span>
  </div>
</div>
