<div class ="container">
  <div class ="row">
    <div class ="col-md-3">
<%= render 'user', user: @user %>
<%= render 'book', book: @booknew %>
    </div>
    <div class ="col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <table class="table">
        <tr>
          <td>
            <%= link_to(user_path(@user)) do %>
              <%= image_tag(@book.user.get_profile_image(100,100)) %></br><%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, book_path(@book) %></td>
          <td><%= @book.body %></td>
          <% if @book.user == current_user %>
            <td><%= link_to "Edit", edit_book_path(params[:id]), class: "btn btn-secondary" %></td>
            <td><%= link_to "Destroy", book_path(@book.id),class: "btn btn-secondary", method: :delete, "data-confirm" => "本当に消しますか？" %></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>