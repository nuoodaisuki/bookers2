<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <script src="https://kit.fontawesome.com/a9f61c314b.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <% if user_signed_in? %>
            <%= link_to "Bookers", root_path, class: "navbar-brand" %>
              <ul class="navbar-nav ml-auto">
                <li>
                  <%= link_to user_path(current_user), class:"nav-link text-light" do %>
                    <i class="fa-solid fa-house"></i>Home
                  <% end %>
                </li>
                <li>
                  <%= link_to users_path, class:"nav-link text-light" do %>
                    <i class="fa-solid fa-users"></i>Users
                  <% end %>
                </li>
                <li>
                  <%= link_to books_path, class:"nav-link text-light" do %>
                    <i class="fa-solid fa-book-open"></i>Books
                  <% end %>
                </li>
                <li>
                  <%= link_to destroy_user_session_path, method: :delete, class:"nav-link text-light" do %>
                    <i class="fa-solid fa-sign-out-alt"></i>Log out
                  <% end %>
                </li>
              </ul>
          <% else %>
            <%= link_to "Bookers", root_path, class: "navbar-brand" %>
              <ul class="navbar-nav ml-auto">
                <li>
                  <%= link_to root_path, class:"nav-link text-light" do %>
                    <i class="fa-solid fa-house"></i>Home
                  <% end %>
                </li>
                <li>
                  <%= link_to about_path, class:"nav-link text-light" do %>
                    <i class="fa-solid fa-link"></i>About
                  <% end %>
                </li>
                <li>
                  <%= link_to new_user_registration_path, class:"nav-link text-light" do %>
                    <i class="fa-solid fa-user-plus"></i>Sign up
                  <% end %>
                </li>
                <li>
                  <%= link_to new_user_session_path, class:"nav-link text-light" do %>
                    <i class="fa-solid fa-sign-in-alt"></i>Log in
                  <% end %>
                </li>
              </ul>
            </div>
          <% end %>
        </div>
      </nav>
    </header>
    <main>
      <p class="notice"><%= notice %></p>
      <%= yield %>
    </main>
    <footer>
      <div class="container">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
